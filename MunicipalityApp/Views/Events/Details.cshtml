    <div class="flex-grow flex items-center justify-center p-6">
        <div class="max-w-4xl mx-auto w-full bg-white p-8 rounded-xl shadow-2xl border border-gray-200">

            <header class="nsw-card-header">
                <h1 class="text-4xl font-extrabold section-heading mb-2">@Model.Title</h1>
                <span class="nsw-category-tag px-3 py-1 text-sm rounded-full uppercase tracking-wider">
                    <i class="fas fa-tag mr-1"></i> @Model.Category
