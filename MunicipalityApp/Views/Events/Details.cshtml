using System.Collections.Generic;

namespace MunicipalityApp.Services
{
    public class EventNode
    {
        public Event Event { get; set; }
        public double Score { get; set; }
        public EventNode Next { get; set; }
    }

    public class EventPriorityQueue
    {
        private EventNode head;

        public void Push(Event ev, double score)
        {
            var node = new EventNode { Event = ev, Score = score };
            if (head == null || head.Score < score)
            {
                node.Next = head;
                head = node;
            }
            else
            {
                var current = head;
                while (current.Next != null && current.Next.Score >= score)
                    current = current.Next;

                node.Next = current.Next;
                current.Next = node;
            }
        }

        public Event Pop()
        {
            if (head == null) return null;
            var ev = head.Event;
            head = head.Next;
            return ev;
        }

        public bool IsEmpty() => head == null;

        public IEnumerable<Event> ToList(int max = 10)
        {
            var list = new List<Event>();
            var current = head;
            int count = 0;
            while (current != null && count < max)
            {
                list.Add(current.Event);
                current = current.Next;
                count++;
            }
            return list;
        }
    }
}

